<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="ExtraText">

            <LinearLayout
                android:id="@+id/appBar"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:background="@color/teal_700"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/imageMenu"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="50dp"
                    android:src="@drawable/menu"
                    app:tint="#FFFFFF" />

                <TextView
                    android:id="@+id/textTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/regular"
                    android:gravity="center"
                    android:text="স্মার্ট বেড়া"
                    android:textColor="@color/white"
                    android:textSize="21dp"
                    android:textStyle="bold"

                    />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="38dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/datebg"
                    android:orientation="vertical"
                    android:padding="3dp"

                    >

                    <TextView
                        android:id="@+id/tvDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="6dp"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="January 23"
                        android:textColor="#FFFFFF"
                        android:textSize="11dp"
                        android:textStyle="bold"

                        />


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/con2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="50dp"
                android:background="#FFEB3B"
                android:orientation="vertical"
                android:visibility="gone"></LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/appBar"
                android:background="#F4F2F2"
                android:visibility="visible"
                tools:context=".MainActivity">

                <LinearLayout
                    android:id="@+id/marqe"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:layout_marginVertical="5dp"
                    android:background="#EFEDED"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="85dp"
                        android:layout_height="match_parent"
                        android:background="@color/teal_700"
                        android:fontFamily="@font/regular"
                        android:gravity="center"
                        android:text="নোটিশ"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/mywidget"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:ellipsize="marquee"
                        android:fadingEdge="horizontal"
                        android:fontFamily="@font/regular"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:scrollHorizontally="true"
                        android:singleLine="true"
                        android:text="                     আসসালামু আলাইকুম, প্রিয় বেড়াবাসী  আমাদের এই অনলাইন সেবামূলক অ্যাপটিতে যুক্ত হওয়ার জন্য আপনাদের সবাইকে
জানাই স্বাগতম। আপনাদের সুবিধার কথা চিন্তা করে বেড়া থানা বাসীদের জন্য এই অনলাইন সেবামূলক অ্যাপটি তৈরি করা। অ্যাপটি  ব্যবহার করে আপনার কেমন লাগছে সেটা আমাদের সাথে শেয়ার করতে পারেন।"
                        android:textColor="#333333"
                        android:textSize="16dp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#E4195A" />

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/Header1"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_below="@+id/marqe"
                    android:background="@color/teal_700"/>

                <RelativeLayout
                    android:id="@+id/Header"
                    android:layout_width="match_parent"
                    android:layout_height="235dp"
                    android:layout_below="@+id/marqe"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardimg"
                        android:layout_width="match_parent"
                        android:layout_height="190dp"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginTop="10dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="5dp">

                        <com.denzcoskun.imageslider.ImageSlider
                            android:id="@+id/image_slider"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:iss_auto_cycle="true"
                            app:iss_delay="0"
                            app:iss_period="3000"
                            app:iss_text_align="CENTER"
                            app:iss_title_background="@color/grey_font"
                            tools:ignore="MissingClass" />


                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/txtsba"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/cardimg"
                        android:layout_marginVertical="3dp"
                        android:gravity="center"
                        android:text="সেবা সমূহ"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/txtsba"
                        android:layout_marginHorizontal="18dp"
                        android:background="@color/white" />

                </RelativeLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/mainMenuRv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/Header"
                    android:layout_marginTop="10dp"
                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                    app:spanCount="3"
                    tools:listitem="@layout/item_main_menu" />

            </RelativeLayout>

        </RelativeLayout>

        <com.google.android.material.navigation.NavigationView
            android:id="@+id/navigationView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            app:headerLayout="@layout/header"
            app:menu="@menu/navigation_menu" />

        <LinearLayout
            android:id="@+id/con"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/drawer_layout"
            android:layout_marginTop="50dp"
            android:background="#BA9A9A"
            android:orientation="vertical"
            android:visibility="gone"></LinearLayout>
    </androidx.drawerlayout.widget.DrawerLayout>
</RelativeLayout>